            android:textSize="18sp"
            android:text="书价格:"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:maxLength="3"
            android:inputType="number"
            android:id="@+id/bookprice_zhu"/>
